<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Entryforex Admin</title>

    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css"></link>
</head>
<body>

<nav class="navbar navbar-default" role="navigation">
    <div class="container">
        <a class="navbar-brand" href="/">Entryforex Admin</a>

        <form class="navbar-form navbar-right" action="/logout">
            <button type="submit" class="btn btn-default">Logout</button>
        </form>
    </div>
</nav>

<div class="container">
    <div class="jumbotron">
        <h1>Total PnL: <%=totalPnL%></h1>
    </div>
    <h2>Open positions</h2>
    <table class="table table-bordered table-hover">
        <tr>
            <th>User</th>
            <th>Instrument</th>
            <th>Amount</th>
            <th>Open price</th>
            <th>Open time</th>
        </tr>
        <%openPositions.forEach(function(position) {%>
            <tr>
                <td><%=position.name%> &lt;<%=position.email%>&gt;</td>
                <td><%=position.instrument%></td>
                <td><%=parseFloat(position.amount)%></td>
                <td><%=parseFloat(position.price)%></td>
                <td><%=position.open_time%></td>
            </tr>
        <%})%>
    </table>
</div>

<script src="/bower_components/jquery/dist/jquery.min.js"></script>
<script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

</body>
</html>
